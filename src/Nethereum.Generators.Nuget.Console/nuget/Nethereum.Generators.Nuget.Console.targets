<Project>

  <PropertyGroup>
    <IsWindows Condition="'$(OS)' == 'Windows_NT'">true</IsWindows>
  </PropertyGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Message Condition = "$(NethereumGenerateCode) != 'false'" Importance="high" Text="Code generating dotnet files based on Nethereum.Generator.config" />
    <Exec Condition = "$(IsWindows) == 'true' and $(NethereumGenerateCode) != 'false'" Command="dotnet %USERPROFILE%\.nuget\packages\Nethereum.Generators.Nuget.Console\1.0.0.1\lib\netcoreapp2.0\Nethereum.Generators.Nuget.Console.dll generate -p $(ProjectPath)" />
    <Exec Condition = "$(IsWindows) == ''  and $(NethereumGenerateCode) != 'false'" Command="dotnet ~/.nuget/packages/Nethereum.Generators.Nuget.Console/1.0.0.1/lib/netcoreapp2.0/Nethereum.Generators.Nuget.Console.dll generate -p $(ProjectPath)" />
  </Target>

</Project>